<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_scan_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_padding"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/in_danger"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_total_issues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/white_80"
            android:textSize="@dimen/_12sdp"
            tools:text="66 issues found" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/color_f9f8fd"
            android:gravity="bottom"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_5sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <RelativeLayout
                            android:id="@+id/ll_virus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp">

                            <ImageView
                                android:id="@+id/im_virus"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_security_guide" />

                            <TextView
                                android:id="@+id/tv_number_virus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_toRightOf="@+id/im_virus"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_12sdp"
                                tools:text="5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_toRightOf="@+id/tv_number_virus"
                                android:text="@string/virus_app"
                                android:textColor="@color/color_222222"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tv_virus_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/im_virus"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="@string/app_virus_content"
                                android:textColor="@color/color_a8a8a8"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:id="@+id/tv_check_virus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_virus_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="?attr/selectableItemBackground"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/check"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/_11sdp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <RelativeLayout
                            android:id="@+id/ll_dangerous"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp">

                            <ImageView
                                android:id="@+id/im_dangerous"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_charging_improver_image" />

                            <TextView
                                android:id="@+id/tv_number_dangerous"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_toRightOf="@+id/im_dangerous"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_12sdp"
                                tools:text="5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_toRightOf="@+id/tv_number_dangerous"
                                android:text="@string/dangerous_app"
                                android:textColor="@color/color_222222"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tv_dangerous_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/im_dangerous"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="@string/app_dangerous_content"
                                android:textColor="@color/color_a8a8a8"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:id="@+id/tv_check_dangerous"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_dangerous_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="?attr/selectableItemBackground"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/check"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:id="@+id/tv_skip_dangerous"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_dangerous_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_toLeftOf="@+id/tv_check_dangerous"
                                android:background="?attr/selectableItemBackground"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/skip"
                                android:textAllCaps="true"
                                android:textColor="@color/color_a8a8a8"
                                android:textSize="@dimen/_11sdp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <TextView
                android:id="@+id/tv_resolve_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/btn_primary_round"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/resolve_all"
                android:textAllCaps="true"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <com.gm.phonecleaner.widget.AntivirusScanView
        android:id="@+id/antivirusScanView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <include
        android:id="@+id/layout_padding"
        layout="@layout/layout_toolbar" />

    <FrameLayout
        android:id="@+id/layout_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>