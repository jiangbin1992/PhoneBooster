<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_5sdp">

    <RelativeLayout
        android:id="@+id/ll_virus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/im_iconApp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_security_guide" />

        <TextView
            android:id="@+id/tv_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/im_iconApp"
            android:text="@string/virus_app"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tv_virus_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/im_iconApp"
            android:layout_below="@+id/tv_appname"
            android:text="@string/virus_app"
            android:textColor="@color/color_f62c2a"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/tv_pkgname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_virus_name"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_toEndOf="@+id/im_iconApp"
            android:textColor="@color/color_a8a8a8"
            android:textSize="@dimen/_10sdp"
            tools:text="com.facebook" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pkgname"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ignore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="@dimen/_10sdp"
                android:text="@string/ignore"
                android:textColor="@color/color_a8a8a8" />

            <TextView
                android:id="@+id/tv_uninstall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="@dimen/_10sdp"
                android:text="@string/uninstall"
                android:textColor="@color/color_d36564" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
