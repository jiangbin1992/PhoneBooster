<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_6ad390">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:layout_alignParentRight="true"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_smart_charger_heart" />

    <ImageView
        android:id="@+id/ic_close"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_5sdp"
        android:alpha="0.7"
        android:padding="@dimen/_3sdp"
        app:srcCompat="@drawable/ic_close_white_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_turn_on"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_15sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smart_charger_can_help"
            android:textColor="@color/white_80"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableLeft="@drawable/ic_round_white"
            android:drawablePadding="@dimen/_5sdp"
            android:text="@string/optimize_chargin_progress"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableLeft="@drawable/ic_round_white"
            android:drawablePadding="@dimen/_5sdp"
            android:text="@string/remind_charger"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_turn_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/btn_primary_round"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/turn_on"
        android:textAllCaps="true"
        android:textColor="@color/white" />
</RelativeLayout>